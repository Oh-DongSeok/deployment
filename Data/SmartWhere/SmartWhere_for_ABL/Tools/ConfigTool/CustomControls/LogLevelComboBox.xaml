<UserControl x:Class="FXKIS.SmartWhere.CommonIF.LogLevelComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FXKIS.SmartWhere.CommonIF"
             mc:Ignorable="d" d:DesignHeight="30" d:DesignWidth="150"
             Height="25">
    <UserControl.Resources>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment"   Value="Center"/>
            <Setter Property="Margin"                     Value="0"/>
            <Setter Property="Padding"                    Value="5, 0"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <ComboBox x:Name="CmbLogLevel">
            <ComboBoxItem x:Name="CmbitemNone"  Content="NONE"/>
            <ComboBoxItem x:Name="CmbitemDebug" Content="DEBUG"/>
            <ComboBoxItem x:Name="CmbitemInfo"  Content="INFORMATION"/>
            <ComboBoxItem x:Name="CmbitemWarn"  Content="WARNING"/>
            <ComboBoxItem x:Name="CmbitemError" Content="ERROR"/>
            <ComboBoxItem x:Name="CmbitemFatal" Content="FATAL"/>
        </ComboBox>
    </Grid>
</UserControl>
